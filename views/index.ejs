<html>
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">


<style>
h1 {
	text-align: center;
}
section {
	width: 60%;
	margin: 0 auto;
	margin-bottom: 5;
	border: 1px solid black;
}
section.scorecard {
	width: 100%;
	margin: 0 auto;
	margin-bottom: 0;
	border: none;
}
section.footer {
	margin-top: 20px;
	border: none;
}
div {
	display: inline-block;
	width: 4%;
	text-align: center;
	margin: 0 auto;
}
div.course {
	width: 100%;
	text-align: left;
	padding-left: 10;
}
div.date {
	width: 100px;
}
div.headers {
	width: 60%;
	display: block;
	margin: 0 auto;
	margin-bottom: 10;
}
a {
	display: inline-block;
	width: 24.5%;
	text-align: center;
	margin: 0 auto;
	text-decoration: none;
	background-color: yellow;
	color: black;
}
a.current 
{
	background-color: green;
	color: white;
}
a:hover {
	background-color: green;
	color: white;
	text-decoration: none;
}
table {
	width: 60%;
	margin: 0 auto;
}
tr,td {
	text-align: center;
}
</style>

		<h1>Golf Score Card App</h1>
	</head>
	<body>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
		
		<div class="headers">
			<a href="/" class="current"> Home </a>
			<a href="/addCourse"> Add Course  </a>
			<a href="/addScorecard"> Add Scorecard  </a>
			<a href="/myStats"> My Stats </a>
		</div>
		
			<% scorecards.forEach(function(fullGame, index) { %>
			<section>	
				<section class="scorecard">
					<div class="course"> <%= fullGame.course %> </div>
				</section>

				<section class="scorecard">
					<div class="date"> Par </div>

					<% fullGame.pars.forEach(function(shotsPerHole, scoreIndex) { %>
						<div> <%= shotsPerHole %> </div>
					<% }); %>

					</section>

				<section class="scorecard">
					<div class="date"> <%= fullGame.date %> </div>

					<% fullGame.scores.forEach(function(shotsPerHole, scoreIndex) { %>
					<div> <%= shotsPerHole %> </div>
					<% }); %>

				</section>
			</section>
			<% }); %>

		<section class="footer">
		</section>
	</body>
</html>