<!DOCTYPE ...>
<html>
	<head>
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<style type="text/css">
h1 {
	text-align: center;
}
select {
	width: 60%;
}
section {
	width: 750px;
	margin: 0 auto;
	margin-bottom: 5;
}
.parAndScore {
	width: 50px;
	display: inline-block;
}
.hole {
	width: 8%;
	text-align: center;
}
div {
	width: 100%;
	margin: 0 auto;
}
div.headers {
	width: 60%;
	margin: 0 auto;
	margin-bottom: 5;
}
a {
	display: inline-block;
	width: 24.5%;
	text-align: center;
	margin: 0 auto;
	text-decoration: none;
	background-color: yellow;
	color: black;
}
a.current 
{
	background-color: green;
	color: white;
}
a:hover {
	background-color: green;
	color: white;
	text-decoration: none;
}
input.submit {
	width: 95%;
}
input.date {
	width: 30%;
}
span {
	width: 9%;
}
span {
	display: inline-block;
	width: 9%;
}
</style>

<script>
	$(document).ready(function() {
		$("select").on("change", function() {
			var getSelectedCourse = "/addScorecard/getCourse?getCourse=" + this.value;

			$.ajax({
				'url': getSelectedCourse,
				'type': 'GET',
				'success': function(data) {
					$("#par1").html(data.pars[0]);
					$("#par2").html(data.pars[1]);
					$("#par3").html(data.pars[2]);
					$("#par4").html(data.pars[3]);
					$("#par5").html(data.pars[4]);
					$("#par6").html(data.pars[5]);
					$("#par7").html(data.pars[6]);
					$("#par8").html(data.pars[7]);
					$("#par9").html(data.pars[8]);
					$("#par10").html(data.pars[9]);
					$("#par11").html(data.pars[10]);
					$("#par12").html(data.pars[11]);
					$("#par13").html(data.pars[12]);
					$("#par14").html(data.pars[13]);
					$("#par15").html(data.pars[14]);
					$("#par16").html(data.pars[15]);
					$("#par17").html(data.pars[16]);
					$("#par18").html(data.pars[17]);
				}
			});
		});

		$("input").on("change", function() {
			var scoreOut = parseFloat($("#hole1").val()) 
						+ parseFloat($("#hole2").val())
						+ parseFloat($("#hole3").val())
						+ parseFloat($("#hole4").val())
						+ parseFloat($("#hole5").val())
						+ parseFloat($("#hole6").val())
						+ parseFloat($("#hole7").val())
						+ parseFloat($("#hole8").val())
						+ parseFloat($("#hole9").val());

			var scoreIn = parseFloat($("#hole10").val()) 
						+ parseFloat($("#hole11").val())
						+ parseFloat($("#hole12").val())
						+ parseFloat($("#hole13").val())
						+ parseFloat($("#hole14").val())
						+ parseFloat($("#hole15").val())
						+ parseFloat($("#hole16").val())
						+ parseFloat($("#hole17").val())
						+ parseFloat($("#hole18").val());

			$("#scoreOut").html(scoreOut);
			$("#scoreIn").html(scoreIn);
		});
	});
</script>

	<h1>Golf Score Card App</h1>
	</head>
	<body>
		<div class="headers">
			<a href="/"> Home </a>
			<a href="/addCourse"> Add Course  </a>
			<a href="/addScorecard" class="current"> Add Scorecard  </a>
			<a href="/myStats"> My Stats </a>
		</div>

		<form action="/addScorecard" method="POST">

		<section>
		<div>
			<select name="course" id="course">
				<option value="" selected disabled hidden>Select Course</option>
				<% courses.forEach((course) => { %>
					<option value="<%= course %>"> <%= course %> </option>
				<% }); %>
			</select>

			<input type="text" name="date"  id="date"   class="date"   placeholder="Date (YYYY-MM-DD)">
		</div>
		</section>
		
		<section>
			<section>
			<div>
				<span class="parAndScore"> Par </span>
				<span class="hole" id="par1">  </span>
				<span class="hole" id="par2">  </span>
				<span class="hole" id="par3">  </span>
				<span class="hole" id="par4">  </span>
				<span class="hole" id="par5">  </span>
				<span class="hole" id="par6">  </span>
				<span class="hole" id="par7">  </span>
				<span class="hole" id="par8">  </span>
				<span class="hole" id="par9">  </span>
				<span class="hole" id="parOut"> Out </span>
			</div>
			</section>

			<section>
			<div>
				<span class="parAndScore"> Score </span>
				<input type="text" name="hole1" id="hole1" class="hole" placeholder="1">
				<input type="text" name="hole2" id="hole2" class="hole" placeholder="2">
				<input type="text" name="hole3" id="hole3" class="hole" placeholder="3">
				<input type="text" name="hole4" id="hole4" class="hole" placeholder="4">
				<input type="text" name="hole5" id="hole5" class="hole" placeholder="5">
				<input type="text" name="hole6" id="hole6" class="hole" placeholder="6">
				<input type="text" name="hole7" id="hole7" class="hole" placeholder="7">
				<input type="text" name="hole8" id="hole8" class="hole" placeholder="8">
				<input type="text" name="hole9" id="hole9" class="hole" placeholder="9">
				<span class="hole" id="scoreOut"> </span>
			</div>
			</section>
		</section>

		<section>
			<section>
			<div>
				<span class="parAndScore"> Par </span>
				<span class="hole" id="par10">  </span>
				<span class="hole" id="par11">  </span>
				<span class="hole" id="par12">  </span>
				<span class="hole" id="par13">  </span>
				<span class="hole" id="par14">  </span>
				<span class="hole" id="par15">  </span>
				<span class="hole" id="par16">  </span>
				<span class="hole" id="par17">  </span>
				<span class="hole" id="par18">  </span>
				<span class="hole" id="parIn"> In </span>
			</div>
			</section>

			<section>
			<div>
				<span class="parAndScore"> Score </span>
				<input type="text" name="hole10" id="hole10"  class="hole" placeholder="10">
				<input type="text" name="hole11" id="hole11"  class="hole" placeholder="11">
				<input type="text" name="hole12" id="hole12"  class="hole" placeholder="12">
				<input type="text" name="hole13" id="hole13"  class="hole" placeholder="13">
				<input type="text" name="hole14" id="hole14"  class="hole" placeholder="14">
				<input type="text" name="hole15" id="hole15"  class="hole" placeholder="15">
				<input type="text" name="hole16" id="hole16"  class="hole" placeholder="16">
				<input type="text" name="hole17" id="hole17"  class="hole" placeholder="17">
				<input type="text" name="hole18" id="hole18"  class="hole" placeholder="18">
				<span class="hole" id="scoreIn"> </span>
			</div>
			</section>
		</section>
		
		<section>
			<input type="submit" class="submit" value="Add Scorecard">
		</section>
		</form>

	</body>
</html>