<h1>Golf Score Card App</h1>
</head>
	<body>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
		<script src="/node_modules/chart.js/dist/Chart.js"></script>
		<script src="/node_modules/ejs/ejs.min.js"></script>

		<div class="headers">
			<a href="/"> Home </a>
			<a href="/addCourse"> Add Course  </a>
			<a href="/addScorecard"> Add Scorecard  </a>
			<a href="/myStats" class="current"> My Stats </a>
		</div>


		<section>
		<h2> Overall Stats </h2>

		<div class="statsTitle">
			Favourite Course
			<div class="stats BestScoreToPar">
				TODO
			</div>
		</div>

		<div class="statsTitle">
			Handicap
			<div class="stats BestScoreToPar">
				TODO
			</div>
		</div>

		<div class="statsTitle">
			Best Score To Par
			<div class="stats BestScoreToPar">
				<%= userStats.bestScoreToPar %>
			</div>
		</div>

		<div class="statsTitle">
			Avg Score To Par
			<div class="stats avgScoreToPar">
				<%= userStats.avgScoreToPar %>
			</div>
		</div>

		</section>

		<section class="chart">
			<canvas id="myChart"></canvas>
		</section>

		<script>
			var statsPerHole = '<%= userStats.perHoleStats %>';
			statsPerHole = statsPerHole.split(',');
			console.log(statsPerHole);
			var data = {
				datasets: [{
					data: statsPerHole,
					backgroundColor: [
						"rgb(255,0,0)",
						"rgb(0,255,0)",
						"rgb(0,0,255)",
						"rgb(0,255,255)",
						"rgb(255,255,0)",
					]
				}],

				// These labels appear in the legend and in the tooltips when hovering different arcs
				labels: [
					'Eagles or Better %',
					'Birdie %',
					'Par %',
					'Bogey %',
					'Double or Worse %'
				]
			};

			var options = {
				cutoutPercentage: 40
			}

			var ctx = document.getElementById("myChart").getContext("2d");
			var myPieChart = new Chart(ctx,{
				type: 'doughnut',
				data: data,
				options: options
			});
		</script>

	</body>
</html>