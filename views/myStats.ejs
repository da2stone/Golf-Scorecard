<html>
<head>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
	<link href="header.css" rel="stylesheet" type="text/css">

<style type="text/css">
	div.statsTitle {
		display: inline-block;
		border: 2px solid black;
		text-align: center;
		width: 200px;
		height: 120px;
		font-size: 20;
		margin: 0 auto;
		margin-top: 5;
	}
	div.stats {
		width: 100%;
		text-align: center;
		font-size: 40;
	}
</style>

<h1>Golf Score Card App</h1>
</head>
	<body>
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


		<div class="headers">
			<a href="/"> Home </a>
			<a href="/addCourse"> Add Course  </a>
			<a href="/addScorecard"> Add Scorecard  </a>
			<a href="/myStats" class="current"> My Stats </a>
		</div>

		<h2> Overall Stats </h2>

		<div class="statsTitle">
			Best Score To Par
			<div class="stats BestScoreToPar">
				<%= userStats.bestScoreToPar %>
			</div>
		</div>

		<div class="statsTitle">
			Avg Score To Par
			<div class="stats avgScoreToPar">
				<%= parseFloat(userStats.totalScoreToPar / userStats.numRounds).toFixed(2) %>
			</div>
		</div>

		<div class="statsTitle">
			Eagle %
			<div class="stats EaglePercentage">
				<%= parseFloat(userStats.numEagles / userStats.numHoles * 100).toFixed(2) %>
			</div>
		</div>

		<div class="statsTitle">
			Birdie %
			<div class="stats BirdiePercentage">
				<%= parseFloat(userStats.numBirdies / userStats.numHoles * 100).toFixed(2) %>
			</div>
		</div>

		<div class="statsTitle">
			Par %
			<div class="stats ParPercentage">
				<%= parseFloat(userStats.numPars / userStats.numHoles * 100).toFixed(2) %>
			</div>
		</div>

		<div class="statsTitle">
			Bogey %
			<div class="stats BogeyPercentage">
				<%= parseFloat(userStats.numBogeys / userStats.numHoles * 100).toFixed(2) %>
			</div>
		</div>

		<div class="statsTitle">
			Double Bogey + %
			<div class="stats DoublePercentage">
				<%= parseFloat(userStats.numDoubles / userStats.numHoles * 100).toFixed(2) %>
			</div>
		</div>

	</body>
</html>